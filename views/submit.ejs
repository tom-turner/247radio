<div class="items-center justify-center h-screen flex flex-col bg-black">
	<h2 class="text-2xl p-2 text-white">PLAY YOUR MUSIC ON 247RADIO</h2>
	<div class="max-w-md p-4 border rounded-md space-y-4 bg-white shadow-lg">

	<form id="submitForm" action="/upload" method="post" enctype="multipart/form-data" class="flex flex-col space-y-4" onsubmit="loading()">
		<span class="flex flex-col">
		<lable>Artist Name: </lable>
		<input type="text" name="artist" id="artist" class="border rounded"/>
	</span>
	<span class="flex flex-col">
		<label>Song Title: </label>
		<input type="text" name="songTitle" id="songTitle" class="border rounded"/>
	</span>
		<input type="file" name="file" id="songFile" />
		<button type="submit" class="bg-black p-2 text-white rounded-full shadow-md">
			<p id="btntxt"> Submit </p>
			<img id="spinner" class="hidden mx-auto h-6" src="images/tail-spin.svg"/>
		</button>
	</form>

	<iframe width="100%" src="https://www.youtube.com/embed/nCsi1fN3ixo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

	</div>



</div>

<script type="text/javascript">

function loading() {
 	document.getElementById("btntxt").classList.add("hidden")
 	document.getElementById("spinner").classList.remove("hidden")
}



</script>